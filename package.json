{
  "name": "ecommerce-app",
  "private": true,
  "type": "module",
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm --prefix backend run dev",
    "dev:web": "npm --prefix frontend run dev",
    "start": "npm-run-all -p start:*",
    "start:api": "npm --prefix backend start",
    "start:web": "npm --prefix frontend start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
